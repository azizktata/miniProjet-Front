pipeline {
    agent any

     environment {
                  DOCKERHUB_CREDENTIALS = credentials('dockerhub_id')
              }
    stages {

        stage('Checkout') {
           steps {
                checkout scm
           }
        }

        stage ("Generate docker image") {
            steps {
                 script{
                    
                    sh "docker build -t aziz77/garage-front:1.0 ."
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                    sh 'docker push aziz77/garage-front:1.0'
                }
            }
        }
        stage ("Deploy to k8s"){
            steps {
                withKubeCredentials(kubectlCredentials: [[caCertificate: '', clusterName: 'k8s-cluster', contextName: '', credentialsId: 'SECRET_KEY', namespace: 'default', serverUrl: 'https://192.168.1.20:6443']]) {
                sh 'curl -LO "https://storage.googleapis.com/kubernetes-release/release/v1.20.5/bin/linux/amd64/kubectl"'  
                sh 'chmod u+x ./kubectl'  
                sh './kubectl delete deployment react-deployment'
                sh './kubectl apply -f ./manifests/react-deployment.yml'
            }
            }
            
        }

    }
    post {
        always {
                    // Cleanup or post-build actions
            deleteDir() // This will delete the workspace directory
        }
    }
}